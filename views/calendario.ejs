<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Calendario de Turnos</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-gray-100 min-h-screen">
  <div class="max-w-5xl mx-auto p-6">
    <h1
      class="flex items-center justify-center gap-3 text-3xl font-bold text-center mb-8 bg-gradient-to-r from-gray-800 to-gray-400 bg-clip-text text-transparent drop-shadow-lg">
      <span class="w-8 h-8 bg-[#1877F2] rounded-md shadow-md"></span>

      Calendario de Turnos
    </h1>

    <!-- Formulario para crear turno -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">Crear Turno</h2>
      <form id="formTurno" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Nombre del cliente</label>
          <input type="text" name="nombre"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            placeholder="Ej: Juan PÃ©rez" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Email del cliente</label>
          <input type="email" name="email"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            placeholder="correo@ejemplo.com" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Tipo de turno</label>
          <select name="tipoTurno"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            required>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Fecha y Hora</label>
          <input type="datetime-local" name="fechaHora"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            required>
        </div>

        <div class="md:col-span-2 flex justify-end">
          <button type="submit"
            class="px-6 py-2 bg-[#1877F2] text-white font-medium rounded-lg shadow hover:bg-[#145dbf] transition">
            Crear Turno
          </button>
        </div>
      </form>
    </div>

    <br>
    <hr><br>

    <!-- Contenedor del calendario -->
    <div class="bg-white rounded-2xl shadow-md p-4 mb-10">
      <div id="calendar"></div>
    </div>

  </div>

  <!-- FullCalendar -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
  <script src="/js/calendario.js"></script>
</body>

</html>